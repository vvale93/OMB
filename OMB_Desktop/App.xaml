<!--vml guarada el namespace a la referencias de todas las clases q contiene -->
<Application x:Class="OMB_Desktop.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:OMB_Desktop" 
             xmlns:vml="clr-namespace:OMB_Desktop.ViewModel"
             StartupUri="MainWindow.xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             >
    <Application.Resources>
        <ResourceDictionary>
                <!--elementos q podemos usar en cualquier ventana-->
                <vml:ViewModelLocator x:Key="Locator"></vml:ViewModelLocator>  <!-- que cree  una instancia de viewmodellocator y la llame locator (se hace de modo declarativo desde xaml)-->
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="10"></Setter>
                    <Setter Property="Height" Value="30"></Setter>
                    <Setter Property="Width" Value="150"></Setter>
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                </Style>
         </ResourceDictionary>
    </Application.Resources>
</Application>